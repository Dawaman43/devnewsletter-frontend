---
import Layout from '../layouts/Layout.astro';

const API_BASE = import.meta.env.VITE_API_BASE_URL ?? 'http://localhost:3000';

let posts = [];
let categories = [];

try {
  const [postsRes, catsRes] = await Promise.all([
    fetch(`${API_BASE}/api/posts?limit=6`),
    fetch(`${API_BASE}/api/categories`)
  ]);
  posts = await postsRes.json();
  categories = await catsRes.json();
} catch (err) {
  console.error('Failed to load data:', err);
}

const formatExcerpt = (content) => {
  // Remove images and other markdown syntax
  const text = content
    .replace(/!\[.*?\]\(.*?\)/g, '') // Remove images
    .replace(/[#*`]/g, '') // Remove other markdown chars
    .replace(/\n+/g, ' ') // Replace newlines with spaces
    .trim();
  
  return text.length > 0 ? text.substring(0, 150) + '...' : '';
};

const extractImage = (content) => {
  const match = content.match(/!\[.*?\]\((.*?)\)/);
  return match ? match[1] : null;
};
---

<Layout title="DevNewsletter - Stay Updated with Developer News">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">
        Stay Updated with <span class="gradient-text">Developer News</span>
      </h1>
      <p class="hero-subtitle">
        Curated articles, tutorials, and insights for modern developers.
        Get the latest in web development, tools, and best practices.
      </p>
      <div class="hero-actions">
        <a href="/posts" class="btn btn-primary">Browse All Posts</a>
        <a href="/categories" class="btn btn-secondary">Explore Categories</a>
      </div>
    </div>
  </section>

  <!-- Categories -->
  {categories.length > 0 && (
    <section class="categories-section">
      <div class="container">
        <h2 class="section-title">Browse by Category</h2>
        <div class="categories-grid">
          {categories.map(cat => (
            <a href={`/categories/${cat.slug}`} class="category-card">
              <span class="category-icon">üìÅ</span>
              <span class="category-name">{cat.name}</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Latest Posts -->
  <section class="posts-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Latest Posts</h2>
        <a href="/posts" class="view-all">View All &rarr;</a>
      </div>
      
      {posts.length === 0 ? (
        <div class="empty-state">
          <p>No posts yet. Check back soon!</p>
        </div>
      ) : (
        <div class="posts-grid">
          {posts.map(post => (
            <article class="post-card">
              <div class="post-card-content">
                {extractImage(post.content) && (
                  <div class="post-image-container mb-4">
                    <img 
                      src={extractImage(post.content)} 
                      alt={post.title}
                      class="w-full h-48 object-cover rounded-lg"
                      loading="lazy"
                    />
                  </div>
                )}
                <time class="post-date">
                  {new Date(post.created_at).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </time>
                <h3 class="post-title">
                  <a href={`/posts/${post.id}`}>{post.title}</a>
                </h3>
                <p class="post-excerpt">
                  {formatExcerpt(post.content)}
                </p>
                <a href={`/posts/${post.id}`} class="read-more">
                  Read More &rarr;
                </a>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>

