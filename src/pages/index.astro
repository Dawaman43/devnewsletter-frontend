---
import Layout from '../layouts/Layout.astro';

const API_BASE = import.meta.env.VITE_API_BASE_URL ?? 'http://localhost:3000';

let posts = [];
let categories = [];

try {
  const [postsRes, catsRes] = await Promise.all([
    fetch(`${API_BASE}/api/posts?limit=6`),
    fetch(`${API_BASE}/api/categories`)
  ]);
  const postsData = await postsRes.json();
  posts = postsData.posts;
  categories = await catsRes.json();
} catch (err) {
  console.error('Failed to load data:', err);
}

const formatExcerpt = (content) => {
  // Remove images and other markdown syntax
  const text = content
    .replace(/!\[.*?\]\(.*?\)/g, '') // Remove images
    .replace(/[#*`]/g, '') // Remove other markdown chars
    .replace(/\n+/g, ' ') // Replace newlines with spaces
    .trim();
  
  return text.length > 0 ? text.substring(0, 150) + '...' : '';
};

const extractImage = (content) => {
  const match = content.match(/!\[.*?\]\((.*?)\)/);
  return match ? match[1] : null;
};
---

<Layout title="DevNewsletter - Stay Updated with Developer News" showHero={true}>
  
  <!-- Categories -->
  {categories.length > 0 && (
    <section class="categories-section">
      <div class="container">
        <h2 class="section-title">Browse by Category</h2>
        <div class="categories-grid">
          {categories.map(cat => (
            <a href={`/categories/${cat.slug}`} class="category-card">
              <span class="category-icon text-2xl group-hover:scale-125 transition-transform duration-300">üìÅ</span>
              <span class="category-name">{cat.name}</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Latest Posts -->
  <section class="posts-section" id="latest">
    <div class="container">
      <div class="section-header flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-12">
        <h2 class="section-title !mb-0 text-3xl md:text-4xl font-serif font-bold tracking-tight">Latest Stories</h2>
        <a href="/posts" class="view-all group flex items-center gap-2 px-5 py-2.5 bg-amber-50 dark:bg-amber-900/10 text-amber-600 dark:text-amber-500 rounded-full font-bold text-sm tracking-wide hover:bg-amber-100 dark:hover:bg-amber-900/20 transition-all">
          <span>Explore All</span>
          <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
        </a>
      </div>
      
      {posts.length === 0 ? (
        <div class="empty-state">
          <p>No posts yet. Check back soon!</p>
        </div>
      ) : (
        <div class="posts-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map(post => (
            <article class="post-card group">
              <div class="post-card-content p-6 h-full flex flex-col">
                {extractImage(post.content) && (
                  <div class="post-image-container relative mb-6 aspect-video overflow-hidden rounded-xl border border-gray-100 dark:border-zinc-800">
                    <img 
                      src={extractImage(post.content)} 
                      alt={post.title}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                  </div>
                )}
                
                <div class="flex items-center gap-3 mb-4">
                    <time class="text-xs font-bold text-gray-400 dark:text-zinc-500 uppercase tracking-widest">
                    {new Date(post.created_at).toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                    })}
                    </time>
                    <span class="w-1 h-1 bg-amber-500 rounded-full"></span>
                    <span class="text-xs font-bold text-amber-600 dark:text-amber-500 uppercase tracking-widest">Story</span>
                </div>

                <h3 class="post-title text-2xl font-serif font-bold text-gray-900 dark:text-white mb-4 leading-tight group-hover:text-amber-600 dark:group-hover:text-amber-500 transition-colors">
                  <a href={`/posts/${post.id}`}>{post.title}</a>
                </h3>

                <p class="post-excerpt text-gray-600 dark:text-zinc-400 font-serif leading-relaxed mb-8 line-clamp-3">
                  {formatExcerpt(post.content)}
                </p>

                <div class="mt-auto">
                    <a href={`/posts/${post.id}`} class="read-more-btn inline-flex items-center gap-2 font-bold text-sm text-gray-900 dark:text-white tracking-widest uppercase hover:gap-3 transition-all duration-300">
                        <span>Read Post</span>
                        <span class="text-amber-500">&rarr;</span>
                    </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Categories Section */
  .categories-section {
    padding: 5rem 0;
    background: var(--color-gray-50);
    border-bottom: 1px solid var(--color-gray-100);
  }
  
  :global(.dark) .categories-section {
    background: rgba(24, 24, 27, 0.5); /* zinc-900/50 */
    border-bottom: 1px solid rgba(39, 39, 42, 0.5); /* zinc-800/50 */
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2.5rem;
    color: var(--text-heading);
    letter-spacing: -0.02em;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .category-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.75rem;
    background: var(--color-gray-100);
    border-radius: 1.25rem;
    text-decoration: none;
    color: var(--text-main);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--color-gray-200);
  }

  .category-card:hover {
    background: white;
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.1);
  }
  
  :global(.dark) .category-card {
    background: rgba(39, 39, 42, 0.8);
    border-color: rgba(63, 63, 70, 0.5);
  }
  
  :global(.dark) .category-card:hover {
    background: #27272a;
    border-color: var(--color-primary);
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
  }

  .category-name {
    font-weight: 700;
    font-size: 0.95rem;
    letter-spacing: -0.01em;
  }

  /* Posts Section */
  .posts-section {
    padding: 6rem 0;
  }

  .post-card {
    background: white;
    border-radius: 1.5rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--color-gray-100);
    height: 100%;
  }
  
  :global(.dark) .post-card {
    background: rgba(24, 24, 27, 0.8);
    border-color: rgba(39, 39, 42, 0.8);
  }

  .post-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary);
  }
  
  :global(.dark) .post-card:hover {
    box-shadow: 0 20px 50px -15px rgba(0, 0, 0, 0.4);
    background: #18181b;
  }

  .empty-state {
    text-align: center;
    padding: 6rem 2rem;
    color: var(--color-gray-500);
    background: var(--color-gray-50);
    border-radius: 2rem;
    border: 2px dashed var(--color-gray-200);
  }

  @media (max-width: 768px) {
    .container {
        padding: 0 1.25rem;
    }
    
    .categories-grid {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
  }
</style>
