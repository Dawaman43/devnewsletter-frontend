---
import Layout from '../layouts/Layout.astro'
import { Code, GitBranch, Zap, Atom, Rocket, Send, Box, Palette, Terminal, Database, Globe, Shield, Coffee } from '@lucide/astro'

const title = 'Developer Tools'
const description = 'Curated collection of essential tools for developers â€” editors, frameworks, utilities, and more.'
---

<Layout title={title} description={description}>
  <header class="relative overflow-hidden py-20 bg-[var(--bg-body)]">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-serif font-medium text-white mb-6">
        Developer Tools
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        {description}
      </p>
    </div>
  </header>

  <section class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-amber-500/5 to-orange-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-amber-100/60 dark:bg-amber-800/20 rounded-2xl group-hover:bg-amber-200/60 dark:group-hover:bg-amber-800/30 transition-colors duration-300">
              <Code class="w-10 h-10 text-amber-700 dark:text-amber-300" />
            </div>
            <span class="px-4 py-2 bg-amber-100/60 dark:bg-amber-900/20 text-amber-800 dark:text-amber-300 text-xs font-medium rounded-full">Editor</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">VS Code</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            The most popular code editor with extensive extensions and customization options.
          </p>
          <a href="https://code.visualstudio.com/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-amber-300 dark:text-amber-300 font-medium group-hover:gap-4 transition-all duration-300">
            Download
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/5 to-teal-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-emerald-100/60 dark:bg-emerald-900/20 rounded-2xl group-hover:bg-emerald-200/60 dark:group-hover:bg-emerald-900/30 transition-colors duration-300">
              <Terminal class="w-10 h-10 text-emerald-700 dark:text-emerald-300" />
            </div>
            <span class="px-4 py-2 bg-emerald-100/60 dark:bg-emerald-900/20 text-emerald-800 dark:text-emerald-300 text-xs font-medium rounded-full">Editor</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Neovim</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            A hyperextensible Vim-based text editor focused on usability and extensibility.
          </p>
          <a href="https://neovim.io/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-emerald-300 font-medium group-hover:gap-4 transition-all duration-300">
            Get Neovim
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-indigo-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-purple-100/60 dark:bg-purple-900/20 rounded-2xl group-hover:bg-purple-200/60 dark:group-hover:bg-purple-900/30 transition-colors duration-300">
              <Zap class="w-10 h-10 text-purple-700 dark:text-purple-300" />
            </div>
            <span class="px-4 py-2 bg-purple-100/60 dark:bg-purple-900/20 text-purple-800 dark:text-purple-300 text-xs font-medium rounded-full">Editor</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Zed</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            A high-performance, multiplayer code editor designed for speed and collaboration.
          </p>
          <a href="https://zed.dev/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-purple-300 font-medium group-hover:gap-4 transition-all duration-300">
            Try Zed
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-cyan-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-blue-100/60 dark:bg-blue-900/20 rounded-2xl group-hover:bg-blue-200/60 dark:group-hover:bg-blue-900/30 transition-colors duration-300">
              <GitBranch class="w-10 h-10 text-blue-700 dark:text-blue-300" />
            </div>
            <span class="px-4 py-2 bg-blue-100/60 dark:bg-blue-900/20 text-blue-800 dark:text-blue-300 text-xs font-medium rounded-full">Version Control</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Git</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            Distributed version control system for tracking changes in source code.
          </p>
          <a href="https://git-scm.com/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-blue-300 font-medium group-hover:gap-4 transition-all duration-300">
            Learn More
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-lime-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-green-100/60 dark:bg-green-900/20 rounded-2xl group-hover:bg-green-200/60 dark:group-hover:bg-green-900/30 transition-colors duration-300">
              <Zap class="w-10 h-10 text-green-700 dark:text-green-300" />
            </div>
            <span class="px-4 py-2 bg-green-100/60 dark:bg-green-900/20 text-green-800 dark:text-green-300 text-xs font-medium rounded-full">Runtime</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Node.js</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            JavaScript runtime built on Chrome's V8 JavaScript engine.
          </p>
          <a href="https://nodejs.org/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-green-300 font-medium group-hover:gap-4 transition-all duration-300">
            Get Started
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-pink-500/5 to-rose-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-pink-100/60 dark:bg-pink-900/20 rounded-2xl group-hover:bg-pink-200/60 dark:group-hover:bg-pink-900/30 transition-colors duration-300">
              <Atom class="w-10 h-10 text-pink-700 dark:text-pink-300" />
            </div>
            <span class="px-4 py-2 bg-pink-100/60 dark:bg-pink-900/20 text-pink-800 dark:text-pink-300 text-xs font-medium rounded-full">Framework</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">React</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            A JavaScript library for building user interfaces.
          </p>
          <a href="https://reactjs.org/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-pink-300 font-medium group-hover:gap-4 transition-all duration-300">
            Documentation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-orange-500/5 to-amber-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-orange-100/60 dark:bg-orange-900/20 rounded-2xl group-hover:bg-orange-200/60 dark:group-hover:bg-orange-900/30 transition-colors duration-300">
              <Rocket class="w-10 h-10 text-orange-700 dark:text-orange-300" />
            </div>
            <span class="px-4 py-2 bg-orange-100/60 dark:bg-orange-900/20 text-orange-800 dark:text-orange-300 text-xs font-medium rounded-full">Framework</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Astro</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            Build fast websites with less client-side JavaScript. This site is built with Astro!
          </p>
          <a href="https://astro.build/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-orange-300 font-medium group-hover:gap-4 transition-all duration-300">
            Explore
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-indigo-100/60 dark:bg-indigo-900/20 rounded-2xl group-hover:bg-indigo-200/60 dark:group-hover:bg-indigo-900/30 transition-colors duration-300">
              <Send class="w-10 h-10 text-indigo-700 dark:text-indigo-300" />
            </div>
            <span class="px-4 py-2 bg-indigo-100/60 dark:bg-indigo-900/20 text-indigo-800 dark:text-indigo-300 text-xs font-medium rounded-full">API Testing</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Postman</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            API development environment for designing, testing, and iterating APIs.
          </p>
          <a href="https://www.postman.com/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-indigo-300 font-medium group-hover:gap-4 transition-all duration-300">
            Try It
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-teal-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-cyan-100/60 dark:bg-cyan-900/20 rounded-2xl group-hover:bg-cyan-200/60 dark:group-hover:bg-cyan-900/30 transition-colors duration-300">
              <Box class="w-10 h-10 text-cyan-700 dark:text-cyan-300" />
            </div>
            <span class="px-4 py-2 bg-cyan-100/60 dark:bg-cyan-900/20 text-cyan-800 dark:text-cyan-300 text-xs font-medium rounded-full">Containerization</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Docker</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            Platform for developing, shipping, and running applications in containers.
          </p>
          <a href="https://www.docker.com/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-cyan-300 font-medium group-hover:gap-4 transition-all duration-300">
            Get Docker
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>

      <article class="group relative bg-white/80 dark:bg-zinc-900/80 rounded-2xl border border-gray-200 dark:border-zinc-800 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
        <div class="absolute inset-0 bg-gradient-to-br from-violet-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative p-8">
          <div class="flex items-center justify-between mb-6">
            <div class="p-4 bg-violet-100/60 dark:bg-violet-900/20 rounded-2xl group-hover:bg-violet-200/60 dark:group-hover:bg-violet-900/30 transition-colors duration-300">
              <Palette class="w-10 h-10 text-violet-700 dark:text-violet-300" />
            </div>
            <span class="px-4 py-2 bg-violet-100/60 dark:bg-violet-900/20 text-violet-800 dark:text-violet-300 text-xs font-medium rounded-full">Design</span>
          </div>
          <h3 class="text-2xl font-serif font-medium text-white mb-3">Figma</h3>
          <p class="text-gray-300 leading-relaxed mb-8">
            Collaborative interface design tool for teams.
          </p>
          <a href="https://www.figma.com/" target="_blank" rel="noopener" 
             class="inline-flex items-center gap-2 text-violet-300 font-medium group-hover:gap-4 transition-all duration-300">
            Design Now
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>
    </div>
  </section>
</Layout>