---
import Layout from '../layouts/Layout.astro';

const API_BASE = import.meta.env.VITE_API_BASE_URL || '';

let categories = [];

try {
  const endpoint = API_BASE.length > 0 ? `${API_BASE}/api/categories` : `/api/categories`;
  const res = await fetch(endpoint);
  categories = await res.json();
} catch (err) {
  console.error('Failed to load categories:', err);
}
---

<Layout title="Categories - DevNewsletter">
  <div class="container">
    <header class="page-header">
      <h1 class="page-title">Browse by Category</h1>
      <p class="page-subtitle">Explore articles organized by topic</p>
    </header>

    {categories.length === 0 ? (
      <div class="empty-state">
        <p>No categories yet.</p>
      </div>
    ) : (
      <div class="categories-grid">
        {categories.map(cat => (
          <a href={`/categories/${cat.slug}`} class="category-card">
            <div class="category-icon">üìÅ</div>
            <h2 class="category-name">{cat.name}</h2>
            <p class="category-description">View all posts in {cat.name}</p>
          </a>
        ))}
      </div>
    )}
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--text-heading);
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: var(--text-main);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: var(--color-gray-50);
    border: 2px solid var(--color-gray-200);
    border-radius: 1rem;
    padding: 2.5rem;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s ease;
    color: var(--text-main);
  }

  :root.dark .category-card {
    background: rgba(255,255,255,0.02);
    border-color: #27272a;
  }

  .category-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.45);
  }

  .category-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .category-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-heading);
    margin-bottom: 0.5rem;
  }

  .category-description {
    color: var(--text-main);
    font-size: 0.875rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-main);
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
    }
  }
</style>