---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

const { slug } = Astro.params;
const API_BASE = import.meta.env.VITE_API_BASE_URL ?? 'http://localhost:3000';

let data = null;
let error = null;

try {
  const res = await fetch(`${API_BASE}/api/categories/${slug}/posts`);
  if (!res.ok) throw new Error('Category not found');
  data = await res.json();
} catch (err) {
  error = err.message;
}

const formatExcerpt = (content) => {
  if (!content) return '';
  const text = content
    .replace(/!\[.*?\]\(.*?\)/g, '')
    .replace(/[#*`]/g, '')
    .replace(/\n+/g, ' ')
    .trim();
  return text.length > 0 ? text.substring(0, 200) + '...' : '';
};

const extractImage = (content) => {
  if (!content) return null;
  const match = content.match(/!\[.*?\]\((.*?)\)/);
  return match ? match[1] : null;
};
---

<Layout title={data?.category?.name ? `${data.category.name} - DevNewsletter` : 'Category'}>
  <div class="container">
    {error || !data ? (
      <div class="error-message">
        {error || 'Category not found'}
      </div>
    ) : (
      <>
        <header class="page-header">
          <a href="/categories" class="back-link">&larr; All Categories</a>
          <h1 class="page-title">{data.category.name}</h1>
          <p class="page-subtitle">{data.posts.length} {data.posts.length === 1 ? 'post' : 'posts'}</p>
        </header>

        {data.posts.length === 0 ? (
          <div class="empty-state">
            <p>No posts in this category yet.</p>
          </div>
        ) : (
          <div class="posts-list">
            {data.posts.map(post => {
              const image = extractImage(post.content);
              return (
                <article class="post-item">
                  {image && (
                    <div class="mb-6">
                      <a href={`/posts/${post.id}`}>
                        <img 
                          src={image} 
                          alt={post.title}
                          class="w-full h-64 object-cover rounded-xl"
                          loading="lazy"
                        />
                      </a>
                    </div>
                  )}
                  <time class="post-date">
                  {new Date(post.created_at).toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </time>
                <h2 class="post-title">
                  <a href={`/posts/${post.id}`}>{post.title}</a>
                </h2>
                <p class="post-excerpt">
                  {formatExcerpt(post.content)}
                </p>
                <a href={`/posts/${post.id}`} class="read-more">
                  Read Full Article &rarr;
                </a>
              </article>
              </article>
              );
            })}
          </div>
        )}
      </>
    )}
  </div>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .back-link {
    display: inline-block;
    color: #667eea;
    text-decoration: none;
    margin-bottom: 1.5rem;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #764ba2;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .post-item {
    padding-bottom: 3rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-date {
    display: block;
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
  }

  .post-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .post-title a {
    color: #1f2937;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .post-title a:hover {
    color: #667eea;
  }

  .post-excerpt {
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
  }

  .read-more {
    color: #667eea;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .read-more:hover {
    color: #764ba2;
  }

  .error-message,
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }

  .error-message {
    color: #dc2626;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .post-title {
      font-size: 1.5rem;
    }
  }
</style>
