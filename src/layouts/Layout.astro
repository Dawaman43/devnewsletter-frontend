---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import "../styles/global.css"

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  showHeaderQuote?: boolean;
  showHero?: boolean;
}

const { 
  title = "DevNewsletter â€” Weekly Dev Notes",
  description = "Weekly newsletter: practical tips, short tutorials, and post-mortems for builders who ship. Join for concise dev notes you can use.",
  image = "/og-image.jpg",
  showHeaderQuote = false,
  showHero = false
} = Astro.props;

const canonicalURL = Astro.props.canonicalURL || Astro.url.href;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL}>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={new URL(image, Astro.url).toString()}>

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={canonicalURL}>
    <meta property="twitter:title" content={title}>
    <meta property="twitter:description" content={description}>
    <!-- Structured Data: Temporarily removed due to compiler panic -->
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="icon" href="/favicon.ico">
    
    <script is:inline>
        // Dark mode init
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark')
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>

    <style>
        :root {
            --font-serif: 'Crimson Text', serif;
            --font-sans: 'Inter', sans-serif;
            
            --color-primary: #d97706;
            --color-primary-dark: #b45309;
            --color-secondary: #f59e0b;
            --color-accent: #fbbf24;
            
            --color-gray-50: #fafafa;
            --color-gray-100: #f5f5f5;
            --color-gray-200: #e5e5e5;
            --color-gray-300: #d4d4d4;
            --color-gray-400: #a3a3a3;
            --color-gray-500: #737373;
            --color-gray-600: #525252;
            --color-gray-700: #404040;
            --color-gray-800: #262626;
            --color-gray-900: #171717;
            
            --bg-body: linear-gradient(135deg, #fefefe 0%, #fafafa 100%);
            --text-main: var(--color-gray-800);
            --text-heading: var(--color-gray-900);
        }

        :root.dark {
            --color-gray-50: #171717;
            --color-gray-100: #262626;
            --color-gray-200: #404040;
            --color-gray-300: #525252;
            --color-gray-400: #737373;
            --color-gray-500: #a3a3a3;
            --color-gray-600: #d4d4d4;
            --color-gray-700: #e5e5e5;
            --color-gray-800: #f5f5f5;
            --color-gray-900: #fafafa;
            
            --color-primary: #fbbf24;
            --color-primary-dark: #f59e0b;

            --bg-body: linear-gradient(135deg, #18181b 0%, #09090b 100%);
            --text-main: #e4e4e7;
            --text-heading: #fafafa;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: var(--font-sans);
            line-height: 1.6;
            color: var(--text-main);
            background: var(--bg-body);
            min-height: 100vh;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: var(--font-serif);
            font-weight: 600;
            line-height: 1.2;
            color: var(--text-heading);
        }
        
        p, li, blockquote {
            font-family: var(--font-serif);
        }
        
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: var(--color-gray-100);
        }
        
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: var(--color-primary-dark);
        }
        
        ::selection {
            background: var(--color-accent);
            color: var(--color-gray-900);
        }
        
        *:focus-visible {
            outline: 2px solid var(--color-primary);
            outline-offset: 2px;
        }
        
        .transition-base {
            transition: all 0.3s ease;
        }
        
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @keyframes shine {
            100% { left: 125%; }
        }
        
        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
        }
        
        .text-balance { text-wrap: balance; }
        
        /* Markdown code blocks */
        pre {
            background-color: #1e1e1e !important;
            color: #d4d4d4 !important;
            padding: 1.25rem;
            border-radius: 0.5rem;
            overflow-x: auto;
            margin: 1.5rem 0;
            font-size: 0.9em;
            line-height: 1.7;
        }
        
        :root.dark pre {
            background-color: #18181b !important; /* zinc-950 */
            border: 1px solid #27272a; /* zinc-800 */
        }
        
        code {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        }
        
        p code, li code {
            background-color: var(--color-gray-200);
            color: var(--text-heading);
            padding: 0.2em 0.4em;
            border-radius: 0.25em;
            font-size: 0.9em;
        }
        
        @media (max-width: 640px) {
            h1 { font-size: 2.5rem; }
            h2 { font-size: 2rem; }
        }
    </style>
</head>

<body class="antialiased">
    <Header showQuote={showHeaderQuote} />
    
    <main class="relative">
        {showHero && (
        <section class="relative overflow-hidden bg-gradient-to-br from-amber-50/30 via-orange-50/20 to-yellow-50/30">
            <div class="absolute inset-0 opacity-[0.03] pointer-events-none">
                <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 30px 30px;"></div>
            </div>
            
            <div class="relative max-w-7xl mx-auto px-6 py-20 lg:py-32 justify-center items-center flex flex-col text-center">
                <div class="text-center max-w-4xl mx-auto">
                    <h1 class="text-6xl md:text-7xl lg:text-8xl font-serif font-medium text-gray-900 leading-tight tracking-tight text-balance mb-8">
                        Weekly dev
                        <span class="relative inline-block px-2">
                            Newsletter
                            <svg class="absolute w-full h-3 -bottom-1 left-0 text-amber-500" viewBox="0 0 100 10" preserveAspectRatio="none">
                                <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="3" fill="none" />
                            </svg>
                        </span>
                        from your bro
                    </h1>

                    <p class="text-xl md:text-2xl text-gray-600 font-serif italic leading-relaxed max-w-3xl mx-auto mb-12">
						Practical tips, short tutorials, and post-mortems for builders who ship. Join for concise dev notes you can use.
					</p>
                    
                    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
                        
                                <a href="/latest" 
                           class="group relative inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-amber-600 to-orange-600 text-white rounded-full overflow-hidden shadow-[0_4px_14px_0_rgba(217,119,6,0.39)] transition-all duration-300 ease-out hover:shadow-[0_6px_20px_rgba(217,119,6,0.23)] hover:-translate-y-1 hover:scale-[1.02] focus:outline-none focus:ring-4 focus:ring-amber-300/40">
                            
                            <div class="absolute top-0 -inset-full h-full w-1/2 z-5 block transform -skew-x-12 bg-gradient-to-r from-transparent to-white opacity-20 group-hover:animate-[shine_1s_ease-in-out_infinite]" style="left: -100%;"></div>
                            
                            <svg class="w-5 h-5 relative z-10 transition-transform duration-300 group-hover:-translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                            
                            <span class="relative z-10 font-serif text-lg font-semibold tracking-wide">Read the newsletter</span>
                            
                            <svg class="w-4 h-4 relative z-10 opacity-70 transition-all duration-300 group-hover:translate-x-1 group-hover:opacity-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                            </svg>
                        </a>
                                <a href="#latest" 
                                    class="inline-flex items-center gap-3 px-8 py-4 bg-white/60 backdrop-blur-md text-gray-800 rounded-full font-serif font-medium hover:bg-white hover:text-orange-600 hover:shadow-lg transition-all duration-300 border border-gray-200 group">
                            <svg class="w-5 h-5 text-gray-500 group-hover:text-orange-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            Wanna hangout?
                        </a>
                    </div>
                </div>
            </div>
        </section>
        )}
        
        <slot />
    </main>
    
    <Footer />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in-up');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);
            
            const animateElements = document.querySelectorAll('article, section > div > div');
            animateElements.forEach(el => observer.observe(el));
            
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {                anchor.addEventListener('click', function (e: Event) {
                    e.preventDefault();
                    const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
                    if (href) {
                        const target = document.querySelector(href);
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>