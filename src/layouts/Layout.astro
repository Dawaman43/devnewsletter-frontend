---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import ConsentBanner from "../components/ConsentBanner.astro"


interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  showHeaderQuote?: boolean;
  showHero?: boolean;
}

const { 
  title = "DevNewsletter — Weekly Dev Notes",
  description = "Weekly newsletter: practical tips, short tutorials, and post-mortems for builders who ship. Join for concise dev notes you can use.",
  image = "/og-image.jpg",
  showHeaderQuote = false,
  showHero = false
} = Astro.props;

const canonicalURL = Astro.props.canonicalURL || Astro.url.href;

function truncate(str: string | undefined, max = 130) {
    if (!str) return '';
    return str.length > max ? str.slice(0, max - 1).trim() + '…' : str;
}

const TITLE_MAX = 60;
const DESC_MAX = 130;
const metaTitle = truncate(title, TITLE_MAX);
const metaDescription = truncate(description, DESC_MAX);
const siteLogo = new URL('/favicon.svg', Astro.url).toString();
const mainCss = new URL('../styles/global.css', import.meta.url).toString();
const metaKeywords = 'developer newsletter, web development, JavaScript, TypeScript, dev tools, tutorials, post-mortems';
const metaTitleFull = metaTitle + ' — Developer newsletter, JavaScript & Web Dev';
const structuredData = JSON.stringify({
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "Organization",
            "name": "DevNewsletter",
            "url": canonicalURL,
            "logo": siteLogo,
            "sameAs": [
                "https://x.com/dawitcodes",
                "https://github.com/dawaman43",
                "https://www.linkedin.com/company/devnewsletter",
                "https://www.youtube.com/@devnewsletter",
                "https://www.instagram.com/devnewsletter",
                "https://www.facebook.com/devnewsletter"
            ]
        },
        {
            "@type": "WebSite",
            "url": canonicalURL,
            "name": metaTitle,
            "description": metaDescription
        }
    ]
}, null, 2);
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{metaTitleFull}</title>
    <meta name="description" content={metaDescription}>
    <meta name="keywords" content={metaKeywords}>
    <link rel="canonical" href={canonicalURL}>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={metaTitle}>
    <meta property="og:description" content={metaDescription}>
    <meta property="og:image" content={new URL(image, Astro.url).toString()}>

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={canonicalURL}>
    <meta property="twitter:title" content={metaTitle}>
    <meta property="twitter:description" content={metaDescription}>
        <link rel="alternate" hreflang="en" href={canonicalURL} />
        <script type="application/ld+json" is:inline>
            {structuredData}
        </script>
    
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600&family=Inter:wght@300;400;500;600;700&display=swap" onload="this.rel='stylesheet'">
        <noscript>
            <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        </noscript>

        <!-- Preload fallback OG image used across pages to improve LCP on social previews and list pages -->
        <link rel="preload" as="image" href="/og-image.jpg">

        <!-- Load main stylesheet non-blocking: preload then swap to stylesheet onload -->
        <link rel="preload" as="style" href={mainCss} onload="this.rel='stylesheet'">
        <noscript>
            <link rel="stylesheet" href={mainCss}>
        </noscript>

    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="shortcut icon" href="/favicon.svg">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    
    <script is:inline>
        // Force dark mode for all pages by default
        document.documentElement.classList.add('dark')
        try { localStorage.theme = 'dark' } catch (e) { /* ignore */ }
    </script>

        <!-- Google Analytics (optional) - set PUBLIC_GA_ID in environment to enable -->
        <!-- Non-blocking: load gtag async and initialize only if a GA ID is provided -->
        {
            /* @ts-ignore */
        }
                <script is:inline>
                        const GA_ID = import.meta.env.PUBLIC_GA_ID || '';
                        try {
                            const consent = typeof localStorage !== 'undefined' ? localStorage.getItem('caching-consent') : null;
                            if (GA_ID && consent !== 'rejected') {
                                const s = document.createElement('script');
                                s.async = true;
                                s.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
                                document.head.appendChild(s);

                                window.dataLayer = window.dataLayer || [];
                                function gtag(){dataLayer.push(arguments);} 
                                gtag('js', new Date());
                                gtag('config', GA_ID, { 'anonymize_ip': true });
                            }
                        } catch (e) {
                            // Ignore if localStorage isn't available or any errors
                        }
                </script>

    <style>
        :root {
            --font-serif: 'Crimson Text', serif;
            --font-sans: 'Inter', sans-serif;
            
            --color-primary: #d97706;
            --color-primary-dark: #b45309;
            --color-secondary: #f59e0b;
            --color-accent: #fbbf24;
            
            --color-gray-50: #fafafa;
            --color-gray-100: #f5f5f5;
            --color-gray-200: #e5e5e5;
            --color-gray-300: #d4d4d4;
            --color-gray-400: #a3a3a3;
            --color-gray-500: #737373;
            --color-gray-600: #525252;
            --color-gray-700: #404040;
            --color-gray-800: #262626;
            --color-gray-900: #171717;
            
            --bg-body: linear-gradient(135deg, #fefefe 0%, #fafafa 100%);
            --text-main: var(--color-gray-800);
            --text-heading: var(--color-gray-900);
        }

        :root.dark {
            --color-gray-50: #171717;
            --color-gray-100: #262626;
            --color-gray-200: #404040;
            --color-gray-300: #525252;
            --color-gray-400: #737373;
            --color-gray-500: #a3a3a3;
            --color-gray-600: #d4d4d4;
            --color-gray-700: #e5e5e5;
            --color-gray-800: #f5f5f5;
            --color-gray-900: #fafafa;
            
            --color-primary: #fbbf24;
            --color-primary-dark: #f59e0b;

            --bg-body: linear-gradient(135deg, #18181b 0%, #09090b 100%);
            --text-main: #e4e4e7;
            --text-heading: #fafafa;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: var(--font-sans);
            line-height: 1.6;
            color: var(--text-main);
            background: var(--bg-body);
            min-height: 100vh;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: var(--font-serif);
            font-weight: 600;
            line-height: 1.2;
            color: var(--text-heading);
        }

        a {
            color: inherit;
            text-decoration: none;
        }
        
        p, li, blockquote {
            font-family: var(--font-serif);
        }
        
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: var(--color-gray-100);
        }
        
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: var(--color-primary-dark);
        }
        
        ::selection {
            background: var(--color-accent);
            color: var(--color-gray-900);
        }
        
        *:focus-visible {
            outline: 2px solid var(--color-primary);
            outline-offset: 2px;
        }
        
        .transition-base {
            transition: all 0.3s ease;
        }
        
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @keyframes shine {
            100% { left: 125%; }
        }
        
        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
        }
        
        .text-balance { text-wrap: balance; }
        
        /* Markdown code blocks */
        pre {
            background-color: #1e1e1e !important;
            color: #d4d4d4 !important;
            padding: 1.25rem;
            border-radius: 0.5rem;
            overflow-x: auto;
            margin: 1.5rem 0;
            font-size: 0.9em;
            line-height: 1.7;
        }
        
        :root.dark pre {
            background-color: #18181b !important; /* zinc-950 */
            border: 1px solid #27272a; /* zinc-800 */
        }
        
        code {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        }
        
        p code, li code {
            background-color: var(--color-gray-200);
            color: var(--text-heading);
            padding: 0.2em 0.4em;
            border-radius: 0.25em;
            font-size: 0.9em;
        }
        
        @media (max-width: 640px) {
            h1 { font-size: 2.5rem; }
            h2 { font-size: 2rem; }
        }
    </style>
</head>

<body class="antialiased">
    <Header showQuote={showHeaderQuote} />
    
    <main class="relative">
      
        
        <slot />
    </main>
    
    <Footer />
    <ConsentBanner />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in-up');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);
            
            const animateElements = document.querySelectorAll('article, section > div > div');
            animateElements.forEach(el => observer.observe(el));
            
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {                anchor.addEventListener('click', function (e: Event) {
                    e.preventDefault();
                    const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
                    if (href) {
                        const target = document.querySelector(href);
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>