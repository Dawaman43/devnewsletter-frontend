---
import "../styles/global.css";
const { title = "Admin" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} â€” Newsletter Admin</title>
  </head>
  <body class="bg-gray-50">
    <div class="flex h-screen">
      <!-- Sidebar (hidden on small screens) -->
      <aside id="adminSidebar" class="w-64 bg-white border-r border-gray-200 hidden md:block">
        <div class="p-6 border-b border-gray-200">
          <h1 class="text-xl font-bold text-gray-900">Admin Panel</h1>
        </div>
        <nav class="p-4">
          <a href="/admin" class="nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Dashboard
          </a>
          <a href="/admin/posts" class="nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Posts
          </a>
          <a href="/admin/categories" class="nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            Categories
          </a>
        </nav>
        <div class="absolute bottom-0 w-64 p-4 border-t border-gray-200">
          <button id="logoutBtn" class="nav-link text-red-600 hover:bg-red-50">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Logout
          </button>
        </div>
      </aside>

      <!-- Main content -->
      <main class="flex-1 overflow-auto">
        <!-- Mobile topbar -->
        <div class="md:hidden p-4 flex items-center justify-between border-b border-gray-200 bg-white">
          <button id="sidebarToggle" aria-label="Open sidebar" class="p-2 rounded-md bg-gray-100">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
          </button>
          <h1 class="text-lg font-semibold">Admin</h1>
          <div></div>
        </div>

        <div class="p-8">
          <slot />
        </div>
      </main>
    </div>

    <script>
      (function(){
        function getToken(){
          try{
            const t = localStorage.getItem('token');
            if (t) return t;
          }catch(e){}
          const m = document.cookie.match(/(?:^|; )token=([^;]+)/);
          if (m) return decodeURIComponent(m[1]);
          return null;
        }

        if (!getToken()) {
          window.location.href = '/admin/login';
        }

        // Logout handler
        const logoutBtn = document.getElementById('logoutBtn');
        logoutBtn?.addEventListener('click', () => {
          try { localStorage.removeItem('token'); } catch(e){}
          document.cookie = 'token=; path=/; max-age=0';
          window.location.href = '/admin/login';
        });

        // Sidebar toggle for mobile
        const sidebar = document.getElementById('adminSidebar');
        const toggle = document.getElementById('sidebarToggle');
        toggle?.addEventListener('click', () => {
          if (!sidebar) return;
          sidebar.classList.toggle('hidden');
        });
      })();
    </script>
  </body>
</html>

<style>
  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    margin-bottom: 0.25rem;
    border-radius: 0.5rem;
    color: #4b5563;
    transition: all 0.2s;
  }
  
  .nav-link:hover {
    background-color: #f3f4f6;
    color: #111827;
    text-decoration: none;
  }
  
  .nav-link.active {
    background-color: #3b82f6;
    color: white;
  }

  /* Responsive adjustments for mobile sidebar */
  @media (max-width: 767px) {
    #adminSidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      z-index: 50;
      width: 16rem;
      overflow-y: auto;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
      background: white;
    }
  }
</style>
