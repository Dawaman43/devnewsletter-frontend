---
import { ExternalLink } from '@lucide/astro';
---

<footer class="mt-32 py-16 border-t border-gray-200 bg-gradient-to-b from-transparent to-gray-50/30">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <a
      href="https://t.me/daw9t"
      target="_blank"
      rel="noopener noreferrer"
      class="group inline-flex items-center gap-3 text-lg font-medium text-gray-700 hover:text-gray-900 transition-all duration-500"
    >
      <span class="relative">
        Chat with me on Telegram
        <!-- Handwritten-style underline -->
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-amber-600 rounded-full transition-all duration-700 group-hover:w-full"></span>
      </span>
      <ExternalLink class="w-5 h-5 opacity-60 transition-all duration-500 group-hover:opacity-100 group-hover:translate-x-1 group-hover:-translate-y-0.5 group-hover:rotate-12" />
    </a>

    
  </div>
</footer>