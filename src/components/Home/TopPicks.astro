---
import { ArrowRight, Star, TrendingUp, BookOpen, Zap, Eye } from '@lucide/astro';

const topPicks = [
  {
    id: 1,
    title: "Why Astro is perfect for newsletters in 2025",
    excerpt: "A thoughtful look at performance, developer experience, and reader-focused design. Discover why static site generators are making a comeback.",
    author: "Sarah Chen",
    readTime: "7 min read",
    category: "Technology",
    featured: true,
    link: "#",
    stats: { likes: 89, views: "2.4k" }
  },
  {
    id: 2, 
    title: "The Design Psychology Behind Great Developer Tools",
    excerpt: "Exploring how the best dev tools leverage psychological principles to enhance productivity and reduce cognitive load.",
    author: "Marcus Rivera",
    readTime: "12 min read",
    category: "Design",
    featured: false,
    link: "#",
    stats: { likes: 67, views: "1.8k" }
  },
  {
    id: 3,
    title: "From Junior to Senior: The Unwritten Rules",
    excerpt: "Beyond technical skills, what truly separates good developers from great ones? A candid conversation about growth.",
    author: "Alex Kim",
    readTime: "9 min read", 
    category: "Career",
    featured: false,
    link: "#",
    stats: { likes: 134, views: "3.1k" }
  },
  {
    id: 4,
    title: "Building for Accessibility: Beyond Compliance",
    excerpt: "Creating truly inclusive web experiences means going beyond meeting WCAG guidelines. Here's how.",
    author: "Jamie Patel",
    readTime: "11 min read",
    category: "Accessibility", 
    featured: false,
    link: "#",
    stats: { likes: 92, views: "2.0k" }
  }
];
---

<section class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 opacity-[0.03]">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="writing-pattern" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
          <text x="50" y="50" font-family="serif" font-size="60" text-anchor="middle" fill="currentColor" opacity="0.1">"</text>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#writing-pattern)"/>
    </svg>
  </div>

  <div class="relative max-w-6xl mx-auto px-6">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-3 mb-6 px-6 py-3 bg-gradient-to-r from-amber-50 to-orange-50 rounded-full border border-amber-200/30">
        <Star class="w-5 h-5 text-amber-600" />
        <span class="text-sm font-medium text-amber-800 tracking-wide">Editor's Choice</span>
      </div>
      
      <h2 class="text-5xl font-serif font-medium text-gray-900 mb-4">
        This Week's Picks
      </h2>
      <p class="text-lg text-gray-600 font-serif italic max-w-2xl mx-auto">
        Curated reading that matters, handpicked for the thoughtful developer
      </p>
    </div>

    <!-- Featured Article -->
    {topPicks.filter(pick => pick.featured).map((pick) => (
      <article class="group relative mb-16">
        <div class="relative bg-gradient-to-br from-white via-gray-50/50 to-white rounded-3xl p-12 shadow-xl hover:shadow-2xl transition-all duration-700 border border-gray-100/50 overflow-hidden">
          
          <!-- Background decoration -->
          <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-amber-100/30 to-orange-100/20 rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-blue-100/20 to-purple-100/20 rounded-full blur-2xl"></div>
          
          <!-- Featured badge -->
          <div class="absolute top-6 right-6 inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white text-xs font-medium rounded-full">
            <TrendingUp class="w-3 h-3" />
            Most Popular
          </div>

          <div class="relative flex flex-col lg:flex-row gap-8 items-start">
            
            <!-- Content -->
            <div class="flex-1">
              
              <div class="flex items-center gap-4 mb-6 text-sm text-gray-500">
                <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full font-medium">{pick.category}</span>
                <span class="flex items-center gap-1">
                  <BookOpen class="w-4 h-4" />
                  {pick.readTime}
                </span>
                <span class="text-gray-400">by {pick.author}</span>
              </div>

              <h3 class="text-4xl font-serif font-medium text-gray-900 leading-tight mb-6 group-hover:text-gray-800 transition-colors duration-300">
                <a href={pick.link} class="relative inline-block">
                  {pick.title}
                  <span class="absolute -bottom-2 left-0 w-0 h-0.5 bg-gradient-to-r from-amber-600 to-orange-500 rounded-full transition-all duration-700 group-hover:w-full"></span>
                </a>
              </h3>

              <p class="text-xl text-gray-700 leading-relaxed font-serif mb-8 max-w-3xl">
                {pick.excerpt}
              </p>

              <div class="flex items-center justify-between">
                <div class="flex items-center gap-6 text-sm text-gray-500">
                  <div class="flex items-center gap-2">
                    <Star class="w-4 h-4 text-amber-500 fill-current" />
                    <span>{pick.stats.likes} likes</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <Eye class="w-4 h-4" />
                    <span>{pick.stats.views} views</span>
                  </div>
                </div>

                <a 
                  href={pick.link}
                  class="group/btn inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-gray-900 to-gray-800 text-white rounded-2xl font-medium transition-all duration-500 hover:shadow-lg hover:-translate-y-1"
                >
                  Read full story
                  <ArrowRight class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-1" />
                </a>
              </div>
            </div>

            <div class="hidden lg:block w-px bg-gradient-to-b from-amber-200 via-gray-200 to-amber-200 self-stretch"></div>
          </div>
        </div>
      </article>
    ))}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {topPicks.filter(pick => !pick.featured).map((pick) => (
        <article class="group relative">
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-500 hover:-translate-y-2 border border-gray-100/50 flex flex-col h-full">
            
            <div class="flex items-center justify-between mb-6">
              <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-xs font-medium">
                {pick.category}
              </span>
              <Zap class="w-4 h-4 text-amber-500" />
            </div>

            <h4 class="text-xl font-serif text-gray-900 leading-tight mb-4 group-hover:text-gray-800 transition-colors duration-300 flex-1">
              <a href={pick.link} class="relative inline-block">
                {pick.title}
                <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-amber-600 to-orange-500 rounded-full transition-all duration-500 group-hover:w-full"></span>
              </a>
            </h4>

            <p class="text-gray-700 leading-relaxed mb-6 font-serif text-sm">
              {pick.excerpt}
            </p>

            <div class="space-y-4 mt-auto pt-6 border-t border-gray-100/50">
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span>by {pick.author}</span>
                <span>{pick.readTime}</span>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3 text-xs text-gray-400">
                  <div class="flex items-center gap-1">
                    <Star class="w-3 h-3" />
                    <span>{pick.stats.likes}</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <Eye class="w-3 h-3" />
                    <span>{pick.stats.views}</span>
                  </div>
                </div>
                
                <a 
                  href={pick.link}
                  class="group/btn inline-flex items-center gap-1 text-sm font-medium text-gray-600 hover:text-gray-900 transition-all duration-300"
                >
                  Read
                  <ArrowRight class="w-3 h-3 transition-transform duration-300 group-hover/btn:translate-x-1" />
                </a>
              </div>
            </div>

            <div class="absolute left-0 top-8 w-1 h-0 bg-gradient-to-b from-amber-600 to-orange-500 rounded-r-full transition-all duration-500 group-hover:h-16"></div>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-amber-50 via-orange-50 to-amber-50 rounded-3xl p-12 border border-amber-200/30">
        <h3 class="text-2xl font-serif font-medium text-gray-900 mb-4">
          Never miss a good story
        </h3>
        <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
          Get the best picks delivered to your inbox every week. No spam, just quality content.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="your@email.com"
            class="flex-1 px-6 py-4 rounded-2xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-amber-200 focus:border-amber-400 font-serif"
          />
          <button class="px-8 py-4 bg-gradient-to-r from-amber-600 to-orange-600 text-white rounded-2xl font-medium hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </div>
</section>