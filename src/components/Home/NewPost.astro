---
import { ArrowRight, Calendar, Clock, Eye, Heart } from '@lucide/astro';

const newPosts = [
  {
    id: 1,
    title: "How to Build a Newsletter with Astro",
    excerpt: "Discover the steps to create a modern, fast newsletter site using Astro, including tips on components, layouts, and deployment.",
    date: "2025-12-20",
    readTime: "8 min read",
    category: "Tutorial",
    link: "/posts/build-newsletter-astro",
    tags: ["astro", "newsletter", "web development"]
  },
  {
    id: 2,
    title: "The Art of Minimal Code: Finding Beauty in Simplicity",
    excerpt: "Explore how to write cleaner, more maintainable code by embracing minimalism and focusing on what truly matters in your applications.",
    date: "2025-12-18",
    readTime: "12 min read", 
    category: "Philosophy",
    link: "/posts/minimal-code-art",
    tags: ["clean code", "minimalism", "best practices"]
  },
  {
    id: 3,
    title: "Deploying Your Astro Newsletter with Vercel",
    excerpt: "Learn how to deploy your Astro-based newsletter site on Vercel for optimal performance and scalability.",
    date: "2025-12-15",
    readTime: "6 min read",
    category: "Deployment",
    link: "/posts/deploy-astro-newsletter-vercel", 
    tags: ["deployment", "vercel", "astro"]
  },
  {
    id: 4,
    title: "Why TypeScript Changes How You Think About JavaScript",
    excerpt: "Dive deep into how TypeScript fundamentally shifts your programming mindset and makes you a better JavaScript developer.",
    date: "2025-12-12",
    readTime: "15 min read",
    category: "Programming",
    link: "/posts/typescript-mindset",
    tags: ["typescript", "javascript", "programming"]
  },
  {
    id: 5,
    title: "Building Accessible Web Experiences That Matter",
    excerpt: "A comprehensive guide to creating web applications that work for everyone, focusing on practical accessibility patterns.",
    date: "2025-12-10",
    readTime: "10 min read",
    category: "Accessibility",
    link: "/posts/accessible-web-experiences",
    tags: ["accessibility", "inclusive design", "ui/ux"]
  },
  {
    id: 6,
    title: "The Psychology of Developer Tools and Workflow",
    excerpt: "Understanding how our tools shape our thinking and how to create development environments that enhance creativity and productivity.",
    date: "2025-12-08",
    readTime: "11 min read",
    category: "Productivity",
    link: "/posts/developer-psychology",
    tags: ["workflow", "productivity", "psychology"]
  }
];

const categoryColors = {
  "Tutorial": "from-blue-500/10 to-blue-600/5 border-blue-200/30",
  "Philosophy": "from-purple-500/10 to-purple-600/5 border-purple-200/30", 
  "Deployment": "from-green-500/10 to-green-600/5 border-green-200/30",
  "Programming": "from-orange-500/10 to-orange-600/5 border-orange-200/30",
  "Accessibility": "from-pink-500/10 to-pink-600/5 border-pink-200/30",
  "Productivity": "from-indigo-500/10 to-indigo-600/5 border-indigo-200/30"
};
---

<section class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 opacity-[0.02]">
    <div class="absolute top-20 left-10 w-64 h-64 bg-gradient-to-br from-amber-400 to-orange-500 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-80 h-80 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-6">
    
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-16 gap-6">
      <div class="relative">
        <h2 class="text-5xl font-serif font-medium text-gray-900 tracking-tight">
          Fresh Pages
        </h2>
        <p class="text-lg text-gray-600 mt-3 font-serif italic">
          New stories from the craft
        </p>
        <div class="absolute -top-2 -right-2 w-3 h-3 bg-amber-400 rounded-full opacity-60"></div>
      </div>
      
      <a
        href="/archive"
        class="group inline-flex items-center gap-3 text-sm font-medium text-gray-500 hover:text-gray-900 transition-all duration-500 px-6 py-3 rounded-2xl hover:bg-gray-50"
      >
        Browse all stories
        <ArrowRight class="w-4 h-4 transition-all duration-500 group-hover:translate-x-2" />
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {newPosts.map((post, index) => (
        <article class="group relative bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-700 hover:-translate-y-3 border border-gray-100/50 flex flex-col overflow-hidden">
          
          <div class={`inline-flex items-center gap-2 mb-6 px-3 py-1.5 rounded-full text-xs font-medium bg-gradient-to-r ${categoryColors[post.category as keyof typeof categoryColors]} border`}>
            <div class="w-2 h-2 rounded-full bg-current opacity-60"></div>
            {post.category}
          </div>

          <!-- Reading Stats -->
          <div class="flex items-center gap-4 text-xs text-gray-500 mb-6">
            <div class="flex items-center gap-1">
              <Calendar class="w-3.5 h-3.5" />
              <time class="font-medium">{post.date}</time>
            </div>
            <div class="flex items-center gap-1">
              <Clock class="w-3.5 h-3.5" />
              <span>{post.readTime}</span>
            </div>
          </div>

          <!-- Title -->
          <h3 class="text-2xl font-serif leading-tight text-gray-900 mb-4 group-hover:text-gray-800 transition-colors duration-300">
            <a
              href={post.link}
              class="relative inline-block"
            >
              {post.title}
              <!-- Hover underline -->
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-amber-600 to-orange-500 rounded-full transition-all duration-500 group-hover:w-full"></span>
            </a>
          </h3>

          <!-- Excerpt -->
          <p class="text-gray-700 leading-relaxed flex-1 mb-6 font-serif">
            {post.excerpt}
          </p>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-6">
            {post.tags.map((tag) => (
              <span class="inline-block px-2 py-1 text-xs font-mono text-gray-600 bg-gray-100/60 rounded-md">
                #{tag}
              </span>
            ))}
          </div>

          <!-- Read More & Stats -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-100/50">
            <a
              href={post.link}
              class="group/btn inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition-all duration-300"
            >
              Continue reading
              <ArrowRight class="w-4 h-4 transition-all duration-300 group-hover/btn:translate-x-1" />
            </a>
            
            <div class="flex items-center gap-3 text-xs text-gray-400">
              <button class="flex items-center gap-1 hover:text-red-500 transition-colors duration-300">
                <Heart class="w-4 h-4" />
                <span>24</span>
              </button>
              <div class="flex items-center gap-1">
                <Eye class="w-4 h-4" />
                <span>1.2k</span>
              </div>
            </div>
          </div>

          <!-- Hover effect accent -->
          <div class="absolute left-0 top-8 w-1 h-0 bg-gradient-to-b from-amber-600 to-orange-500 rounded-r-full transition-all duration-700 group-hover:h-24"></div>
          
          <!-- Floating decorative element -->
          <div class="absolute -top-4 -right-4 w-8 h-8 bg-gradient-to-br from-amber-200 to-orange-200 rounded-full opacity-0 group-hover:opacity-20 transition-all duration-700 blur-sm"></div>
        </article>
      ))}
    </div>

    <!-- Load More -->
    <div class="text-center mt-16">
      <button class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-gray-50 to-gray-100 hover:from-gray-100 hover:to-gray-200 text-gray-700 rounded-2xl font-medium transition-all duration-300 hover:-translate-y-1 shadow-sm hover:shadow-md">
        Load more stories
        <ArrowRight class="w-5 h-5" />
      </button>
    </div>
  </div>
</section>